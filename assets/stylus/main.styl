azulObscuro = #0B2347
gris = #373435
amarillo = #FFCC00
rojo = #F70F0F
verde = #99CC33
azul = #1C4A78

ngxs = "(max-width: 600px)"
ngsm = "(min-width: 601px) and (max-width: 960px)"
ngmd = "(min-width: 961px) and (max-width: 1280px)"
lg = "(min-width: 1281px) and (max-width: 1920px)"
xl = "(min-width: 1921px)"

html, body
	background-color inherit

md-dialog
	width 60vw
	@media ngxs
		width 100%
		height 100%

.background-blanco
	background-color white

.background-negro
	background-color black

.background-azul
	background-color azul
.background-rojo
	background-color rojo
.background-amarillo
	background-color amarillo
.background-verde
	background-color verde

.panel
	pointer-events auto !important

md-grid-list
	margin-top 30px
	md-grid-tile
		background-position center
		background-size cover
header
	height inherit
	@media ngxs
		height 70px
	.header-content
		width 100%
		height 150px
		background-color azulObscuro
		.logo-container
			img
				height 70px
		.slogan-container
			img
				height 30px
		.md-button
			md-icon
				color white
	.subheader
		height 48px
		width 100%
		background-color gris
		.md-button
			color white !important

.galeria
	md-grid-list
		margin-top 30px
		md-grid-tile
			background-size cover
			background-position center center

.promociones, .ubicaciones
	img
		width 100%

.productos
	h1
		text-align center
	md-grid-list
		md-grid-tile
			cursor pointer
			.img-container
				img
					height 100px
					margin-left 50px

.catalogos
	md-grid-list
		md-grid-tile
			background-position center
			background-size cover

			img
				width 100%

.home
	.slider
		height 360px
		@media ngxs
			height 130px
		.slide
			background-position center
			background-size cover
	md-grid-list
		md-grid-tile
			background-position center
			background-size cover
			cursor pointer
		.productos
			background-color amarillo
		.catalogos
			background-color rojo
		.nosotros
			background-color azulObscuro
		.ubicaciones
			background-color rojo
		.galeria
			background-color gris
		.promociones
			background-color rojo
			img
				height 180px
		.aquaspa
			background-color azul
		.title
			height 80px
			img
				height 80px

.filtro
	.titulo
		height 100px
		margin 20px 0
		h1
			text-align center
			font-size 36px
			color white
	.filtro-content
		.md-subheader
			background-color azulObscuro
			color white
		.md-button
			width 100%
			padding 0px
			margin 0px
			border-radius 0px
		.cotizador
			md-list
				margin 0px
				padding 0px
				md-list-item
					padding-left 16px
					padding-right 0px
					font-size 11px
					.md-button
						min-width 36px
		md-grid-list
			md-grid-tile
				md-card
					md-card-title
						padding 0 16px
					md-list
						md-list-item
							height 15px
							min-height 15px
							.md-list-item-text
								font-size 11px
					&.click
						background-color azulObscuro
						color white
						cursor pointer
						height 200px
						width 200px
						display flex
						h4
							margin auto

.enviarcotizacion
	md-toolbar
		background-color azulObscuro
		img
			height 44px
			margin 10px
	h1
		text-align center
	form
		margin-bottom 0px
		.info
			padding 10px
		.productos
			padding 10px
			md-list
				margin 0px
				padding 0px
				border 1px solid orange
				md-virtual-repeat-container
					min-height 300px
		.opciones
			.md-button
				margin 0px
				padding 0px
				border-radius 0px
				&.ok
					background-color rgb(76, 175, 80)
				&.cancelar
					background-color rgb(244, 67, 54)





footer
	height 160px
	background-color gris
	img
		height 80px
