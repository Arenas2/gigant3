.imagenes
	.imagenes-title
		padding 10px
	form
		width 100%
		height 100%
		md-input-container
			width 100%
			margin 0px
		.image-container
			height calc(100% - 66px)
			.dropify-container
				position absolute
				width 100%
				height calc(100% - 66px)
				.dropify-wrapper
					height 100%
					padding 0px
					margin 0px
					border 0px
			.croppie-container
				position absolute
				display flex
				ng-croppie
					margin 0px
					display inline-block
		.md-button
			margin 0px
			width 100%
			border-radius 0px

