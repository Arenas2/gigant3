.home(layout="row" layout-align="center center")
	.home-container(flex="100" layout="column")
		.slider
			.slide(layout-fill style="background-image:url(img/sliders/slider.png)")
		md-grid-list(md-cols="10" md-row-height="250px" style="margin-top:0px")
			md-grid-tile.productos(md-colspan="6" md-colspan-sm="10" md-colspan-xs="10" md-rowspan="1" style="background-image:url(img/Index_Conoce_Nuestros_Productos_Back.jpg)" ui-sref="productos")
				.title
					img(src="img/Txt_Disenamos_tu_espacio.png")
			md-grid-tile.catalogos(md-colspan="4" md-colspan-sm="10" md-colspan-xs="10" md-rowspan="1" ui-sref="catalogos")
				.title
					img(src="img/Index_Descarga_Nuestros_Catalogos.jpg")
			md-grid-tile.nosotros(md-colspan="2" md-colspan-sm="10" md-colspan-xs="10" md-rowspan="1" ui-sref="nosotros")
				.title
					img(src="img/Txt_Porque_nos_prefieren.png")
			md-grid-tile.ubicaciones(md-colspan="4" md-colspan-sm="10" md-colspan-xs="10" md-rowspan="1" style="background-image:url(img/Back_Conoce_nuestras_tiendas2.png)" ui-sref="ubicaciones")
			md-grid-tile.galeria(md-colspan="4" md-colspan-sm="10" md-colspan-xs="10" md-rowspan="1" ui-sref="galeria")
				.title
					img(src="img/Txt_Visita_nuestra_galeria.png")

			md-grid-tile.promociones(md-colspan="5" md-colspan-sm="10" md-colspan-xs="10" md-rowspan="1" ui-sref="promociones")
				img(src="img/Txt_Grandes_Descuentos.png" style="width: inherit")
			md-grid-tile.aquaspa(md-colspan="5" md-colspan-sm="10" md-colspan-xs="10" md-rowspan="1" style="background-image:url(img/Back_Disenamos_tu_espacio_2.jpg)")
			
